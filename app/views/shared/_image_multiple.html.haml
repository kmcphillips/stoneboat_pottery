- images = imageable.images.primary_first
#images_container
  - if images.any?
    .hscroll_images
      %table.image
        %tr
          - if images.any?
            - images.each do |image|
              %td
                = link_to image_tag(image.thumb), image.full, :rel => :facebox, :class => (image.primary? ? :thumb_primary : :thumb)
                %br
                = button_to_remote "Remove Image", :url => admin_image_path(image, :imageable_type => image.imageable_type, :imageable_id => image.imageable_id), :method => :delete, :failure => "alert('There was an error removing this image. Please try again or contact administrator.')", :confirm => "Are you sure you want to delete this image?"
                
                - unless image.primary?
                  %br
                  = button_to_remote "Make Primary", :url => make_primary_admin_image_path(image), :method => :put, :failure => "alert('There was an error making this image primary. Please try again or contact administrator.')"

  
  #images_add
    = button_to_function "Add Image", "show_upload()"
    - if imageable.respond_to?(:images)
      %span.count
        = imageable.images.size
        = imageable.images.size == 1 ? "image" : "images"
        attached to this
        = imageable.class.base_class.to_s.humanize.downcase + "."

