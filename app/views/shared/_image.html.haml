- content_for :js do
  :javascript
    function upload_before()
    {
      $('#upload img.throbber').show();
      $('#upload input.submit').attr("disabled", true);
    }

    function upload_after()
    {
      $('#upload').overlay().close();
      $('#upload img.throbber').hide();
      $('#upload input.submit').attr("disabled", false);
      $('#image_uploaded_data').val("");
    }

= render :partial => "shared/image_container"  

#upload
  %div
    %h2 Upload Image

    - form_for :image, :url => admin_images_path(:format => "js"), :html => { :multipart => true, :target => "upload_iframe", :onsubmit => "upload_before();" } do |f|
      = f.file_field :uploaded_data
      %br
      = submit_tag "Upload", :class => "submit"
      = submit_tag "Cancel", :class => "close", :onclick => "return false;"
      = image_tag "/images/template/throbber.gif", :class => "throbber", :alt => "Loading..."

%iframe{:id => "upload_iframe", :name => "upload_iframe", :height => 1, :width => 1, :style => "display: none"}

