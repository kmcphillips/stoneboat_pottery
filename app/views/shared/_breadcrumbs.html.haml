- spacer = "&nbsp;&gt;&nbsp;"

- if ["forms", "categories", "subcategories"].include?(params[:controller])
  #breadcrumbs
    = link_to "All Categories", categories_path
    - if @category
      = spacer
      = link_to @category.name, category_path(@category)
      - if @subcategory
        = spacer
        = link_to @subcategory.name, category_subcategory_path(@category, @subcategory)
        - if @form
          = spacer
          = link_to @form.name, category_subcategory_form_path(@category, @subcategory, @form)

- elsif ["admin/forms", "admin/categories", "admin/subcategories"].include?(params[:controller])
  #breadcrumbs
    = link_to "Admin All Categories", admin_categories_path
    - if @category && ! @category.new_record?
      = spacer
      = link_to @category.name, admin_category_path(@category)
      - if @subcategory && ! @subcategory.new_record?
        = spacer
        = link_to @subcategory.name, admin_category_subcategory_path(@category, @subcategory)
        - if @form && ! @form.new_record?
          = spacer
          = link_to @form.name, admin_category_subcategory_form_path(@category, @subcategory, @form)

- elsif params[:controller] == "functional_pieces"
  #breadcrumbs
    = link_to "All Funky Functional Pieces", functional_pieces_path
    - if @piece
      = spacer
      = link_to @piece.name, functional_piece_path(@piece)


- elsif params[:controller] == "sculptural_pieces"
  #breadcrumbs
    = link_to "All Sculptural Pieces", sculptural_pieces_path
    - if @piece
      = spacer
      = link_to @piece.name, sculptural_piece_path(@piece)

- else
  #breadcrumbs-blank
    &nbsp;
