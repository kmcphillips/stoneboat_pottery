%div.post
  %h2.title All Categories

- if @categories.blank?
  %div.entry
    %p None
- else
  - @categories.each do |category|
    %div{:class => cycle("preview_row_odd","preview_row_even")}
      .image= link_to(image_tag(category.image.public_filename(:thumb), :alt => ALT_TAG_DEFAULT), category_path(category)) if category.image
      .body
        %h3= link_to(category.name, category_path(category))
        %p
          TODO
      .clear

- if current_user
  %div.post
    %div.footer
      - if @inactive_categories.any?
        %p * Plus #{@inactive_categories.size} #{@inactive_categories.size == 1 ? "category that is" : "categories that are"} not active.
      %p= show_entity_image(admin_categories_path, "Show all categories")
