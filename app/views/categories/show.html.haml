%div.post
  %h2.title= h @category.name

  %div.entry
    %ul.menu
      - @subcategories.each do |subcategory|
        %li
          = link_to subcategory.name, category_subcategory_path(subcategory.category, subcategory)
          = ":"
          = simple_format subcategory.description

    = edit_entity_image(edit_admin_category_path(@category), "Edit this category") if current_user

