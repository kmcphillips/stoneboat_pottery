%div.post
  %h2.title Wholesale

  %div.entry
    = auto_link(simple_format(@block.body))

    %p
      = link_to "Logout of Wholesale", "/logout"

    = edit_entity_image(edit_admin_block_path(@block), "Edit this block") if current_user


%div.post
  %h2.title Price List

  %div.entry
    - if @categories.blank?
      %p None
    - else
      %p
        - @categories.each do |category|
          - unless category.subcategories.blank?    
            %h4= h category.name
            - category.subcategories.active.each do |subcategory|
              = render :partial => 'blocks/subcategory', :object => subcategory
    
