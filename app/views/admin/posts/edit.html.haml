%div.post
  %h2.title Edit Post

  %div.entry
    - form_for [:admin, @post] do |f| 
      = render :partial => 'admin/posts/form', :locals => {:f => f}
      = f.submit "Save"
 
    %br 
    = render :partial => "shared/image", :locals => { :imageable => @post }

  %div.actions
    = index_entity_image(admin_posts_path, "Back to all posts")

