%div.post
  %h2.title Edit Link

  %div.entry
    = form_for [:admin, @link] do |f| 
      = render :partial => 'admin/links/form', :locals => {:f => f}
      = f.submit "Save"

  %div.actions
    = index_entity_image(admin_links_path, "Back to all links")
    %br
    = delete_entity_image(admin_link_path(@link), "Delete this link")

