%div.post
  %h2.title Images

  %div.entry
    = link_to "Create new image", new_admin_image_path

    %table
      %tr
        %th Filename
        %th Dimensions
        %th Thumbnail
        %th Actions
      - @images.each do |image|
        %tr
          %td= image.public_filename
          %td= "#{image.height} x #{image.width}"
          %td= image.thumbnail
          %td
            None

