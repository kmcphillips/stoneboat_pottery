%p
  = f.label :name
  = f.text_field :name

%p
  = f.label :description
  %br
  = f.text_area :description, :rows => 15, :cols => 70

- if f.object.permalink
  %p
    = f.label :permalink
    = ": "
    = f.object.permalink

%p
  = f.label :price
  = f.text_field :price, :size => 6, :maxlength => 6

%p
  = f.label :for_sale
  = f.check_box :for_sale

%p
  = f.label :active
  = f.check_box :active

