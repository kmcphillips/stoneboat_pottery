%div.post
  %h2.title Edit Piece

  %div.entry
    - form_for [:admin, @piece] do |f| 
      = render :partial => 'admin/pieces/form', :locals => {:f => f}
      = f.submit "Save Piece"

  %div.actions
    - index_entity_image(admin_pieces_path)
    = link_to "Back to all pieces", admin_pieces_path

