- if forms.forms.blank?
  None
- else
  %table.data
    %tr
      %th Name
      %th Description
      %th Active?
      %th Actions      
    - forms.forms.each do |form|
      %tr
        %td= link_to form.name, admin_category_subcategory_form_path(form.category, form.subcategory, form)
        %td= h form.description
        %td= form.active?
        %td
          = link_to "Show", admin_category_subcategory_form_path(form.category, form.subcategory, form)
          = link_to "Edit", edit_admin_category_subcategory_form_path(form.category, form.subcategory, form)
          = button_to "Delete", admin_category_subcategory_form_path(form.category, form.subcategory, form), :method => :delete, :confirm => "Are you sure you want to delete this form?"
