%div.post
  %h2.title Edit Subategory

  %div.entry
    - form_for [:admin, @category, @subcategory] do |f| 
      = render :partial => 'admin/subcategories/form', :locals => {:f => f}
      = f.submit "Save"

  %div.actions
    = index_entity_image(admin_category_path(@category), "Back to all subcategories under #{@category.name}")

