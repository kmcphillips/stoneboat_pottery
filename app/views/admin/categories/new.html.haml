%div.post
  %h2.title New Category

  %div.entry
    - form_for [:admin, @category], :method => :post do |f| 
      = render :partial => 'admin/categories/form', :locals => {:f => f}
      = f.submit "Create New Category"

  %div.actions
    - index_entity_image(admin_categories_path)
    = link_to "Back to all categories", admin_categories_path

