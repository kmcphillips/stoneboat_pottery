%div.post
  %h2.title Edit Category

  %div.entry
    - form_for [:admin, @category] do |f| 
      = render :partial => 'admin/categories/form', :locals => {:f => f}
      = f.submit "Save Category"

  %div.actions
    - index_entity_image(admin_categories_path)
    = link_to "Back to categories", admin_categories_path
