= render :partial => 'posts/post', :locals => {:post => @post}

- if current_user
  %table.actions
    %tr
      %td
        - index_entity_image(admin_posts_path)
      %td= link_to "Back to all posts", admin_posts_path
    %tr
      %td    
        - edit_entity_image(edit_admin_post_path(@post))
      %td= link_to "Edit this post", edit_admin_post_path(@post)
    %tr
      %td
        - delete_entity_image(admin_post_path(@post))
      %td= link_to "Delete this post", admin_post_path(@post), :method => :delete, :confirm => "Are you sure you want to delete this?"
