%div.post
  %h2.title= h post.title

  %div.meta
    %p
      = h post.updated_at.to_s(:simple_short)
      = " - "
      = link_to "permalink", post_path(post.permalink)

  %div.entry
    = images_for post
    - if post.generated
      = post.body
    - else
      = auto_link(simple_format(post.body))
    
    = edit_entity_image(edit_admin_post_path(post), "Edit this post") if current_user && !post.generated

  %div.clear
    
