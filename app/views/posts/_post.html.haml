%div.post
  %h2.title= h post.title

  %div.meta
    %p
      = h post.updated_at.to_s(:short)
      = " - "
      = link_to "permalink", post_path(post.permalink)

  %div.entry
    = images_for post
    = simple_format post.body
    
    = edit_entity_image(edit_admin_post_path(post), "Edit this post") if current_user

  %div.clear
    
